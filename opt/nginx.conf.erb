daemon off;

events {
	use epoll;
	accept_mutex on;
	worker_connections 1024;
}


http {
  server {
      listen <%= ENV["PORT"] %>;
      server_name _;
      access_log /dev/null;
      error_log /dev/null;
      client_max_body_size 10M;
      location / {
          proxy_set_header   X-Real-IP $remote_addr;
          proxy_set_header   Host      $http_host;
          proxy_pass         http://127.0.0.1:8080;
      }
  }
}
